{
  "target": "ESNext",
  "module": "Node18",
  "rootDir": "./src",
  "strict": "true",
  "skipLibCheck": "true",
  "moduleResolution": "Node",
  "include": ["src/*"],
  "experimentalDecorators": true,
  "compilerOptions": {
    "outDir": "dist/",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "jest"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
